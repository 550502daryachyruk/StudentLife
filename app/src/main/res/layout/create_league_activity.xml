<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/animation_list"
    android:id="@+id/linear_layout_create_league"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.a_team.studentlife.navigation_drawer_fragments.FragmentStore"
    android:orientation="vertical">


    <TextView
        android:id="@+id/createLeagueHeaderTextView"
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:text="@string/createleaguehead"
        android:textAlignment="center"
        android:textColor="@android:color/background_light"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/nameofchildleaguetextview"
        android:textColor="@android:color/background_light"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/createLeagueNameTextEdit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:textColor="@android:color/background_light" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/descrofchildleaguetextview"
        android:textColor="@android:color/background_light"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/createLeagueDescriptionTextEdit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textMultiLine"
        android:textColor="@android:color/background_light" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/photoofchildleaguetextview"
        android:textColor="@android:color/background_light"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/createLeaguePhotoTextEdit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="NameOFPHOTO"
        android:textColor="@android:color/background_light" />

    <Button
        android:id="@+id/createChildLeagueButton"
        android:background="@drawable/selector_xml_btn_yellow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/createChildLeagueButton" />

</LinearLayout>
